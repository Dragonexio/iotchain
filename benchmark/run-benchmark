#!/usr/bin/env ruby

def exec(cmd)
  puts cmd
  abort("Error encountered, aborting") unless system(cmd)
end

unless ARGV[0]
    $stderr.puts "ERROR: Benchmark name missing!"
    puts
    puts "Example: project/run-benchmark xxx"
    exit 1
end

Dir.chdir(File.absolute_path(File.join(File.dirname(__FILE__), "..")))

name = ARGV[0]
date = Time.now.strftime("%Y-%m-%d")

exec("mkdir -p benchmark/results/#{date}")
exec(
    "sbt " +
    "benchmarkPrev/clean benchmarkNext/clean " +
    "'benchmarkPrev/jmh:run -o ../results/#{date}/#{name}-Prev.txt  -i 10 -wi 10 -f 2 -t 1 jbok.benchmark.#{name}' " +
    "'benchmarkNext/jmh:run -o ../results/#{date}/#{name}-Next.txt  -i 10 -wi 10 -f 2 -t 1 jbok.benchmark.#{name}'"
)